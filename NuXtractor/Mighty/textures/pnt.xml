<?xml version="1.0" encoding="utf-8" ?>
<type name="pnt">
  <type name="palette">
    <type name="color">
      <attr type="u1" name="r" />
      <attr type="u1" name="g" />
      <attr type="u1" name="b" />
      <attr type="u1" name="a" />
    </type>
    <attr name="unk000">
      <size>0x70</size>
    </attr>
    <attr type="color" name="colors">
      <repeat>expr</repeat>
      <repeat-expr>
        (_self._parent.flag &amp; 1) == 1 ? 256 : 16
      </repeat-expr>
    </attr>
  </type>
  <attr type="u2le" name="width" />
  <attr type="u2le" name="unk000" />
  <attr type="u2le" name="height" />
  <attr type="u2le" name="unk001" />
  <attr type="u4le" name="unk002" />
  <attr type="u4le" name="flag" />
  <attr type="palette" name="palette" />
  <attr name="unk003">
    <size>_self._io._parent.size - _self._io._parent.pos - _self.width * _self.height / ((_self.flag &amp; 1) == 0 ? 2 : 1)</size>
  </attr>
  <attr name="pixels">
    <size>_self.width * _self.height / ((_self.flag &amp; 1) == 0 ? 2 : 1)</size>
  </attr>
</type>